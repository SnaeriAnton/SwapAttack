using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class MoveStateFrog : State
{
    [SerializeField] private float _speed;

    private float _targetPosition;
    private int _direction;
    private int _heightOfJump = 1;

    private void Start()
    {
        _targetPosition = transform.position.y;
    }

    private void Update()
    {
        transform.position = Vector2.MoveTowards(transform.position, Target.transform.position, _speed * Time.deltaTime);

        if (transform.position.y > _targetPosition + _heightOfJump)
        {
            _direction = -1;
        }
        if (transform.position.y < _targetPosition)
        {
            _direction = 1;

        }
        transform.Translate(Vector2.up * _speed * Time.deltaTime * _direction);
    }
}
